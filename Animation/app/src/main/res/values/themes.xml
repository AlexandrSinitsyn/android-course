<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Animation" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <attr name="color" format="color|reference" />
    <attr name="scale" format="float" />
    <attr name="animationDuration" format="integer" />
    <attr name="angleSpeed" format="integer" />

    <declare-styleable name="Cross">
        <attr name="color" />
        <attr name="scale" />
        <attr name="animationDuration" />
        <attr name="animationDelay" format="integer" />
    </declare-styleable>

    <declare-styleable name="PlanetProgress">
        <attr name="color" />
        <attr name="scale" />
        <attr name="angleSpeed" />
    </declare-styleable>

    <declare-styleable name="PulsatingDot">
        <attr name="color" />
        <attr name="maxScale" format="float" />
        <attr name="animationDuration" />
    </declare-styleable>

    <declare-styleable name="PlanetProgressPro">
        <attr name="color" />
        <attr name="scale" />
        <attr name="radius" format="float" />
        <attr name="rotationDirectionClockwise" format="boolean" />
        <attr name="rotationSpeedRandom" format="boolean" />
        <attr name="orbitCount" format="integer" />
        <attr name="angleSpeed" />
    </declare-styleable>

    <declare-styleable name="ProgressBar">
        <attr name="color" />
        <attr name="width" format="float" />
        <attr name="speed" format="float" />
    </declare-styleable>
</resources>